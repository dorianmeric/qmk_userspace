SUBS(combo_oi,     "oi",             LGUI_T(KC_O),      LALT_T(KC_I)        )               
SUBS(combo_ion,    "ion",            LSFT_T(KC_N),      LGUI_T(KC_O),   LALT_T(KC_I)        )              
SUBS(combo_tion,   "tion",           LSFT_T(KC_T),      LSFT_T(KC_N),   LGUI_T(KC_O),      LALT_T(KC_I)        )        

SUBS(combo_regards,     "Regards,\nDorian",             KC_P,              KC_B        )     