// COMB(combo09,     KC_SCLN,                  KC_H,           LALT_T(KC_L)    )           // k+l = ;

COMB(combo98,     QK_BOOTLOADER,            KC_Q, KC_W, KC_F, KC_P, KC_B)       // whole top row = puts the mcu in bootloader mode

