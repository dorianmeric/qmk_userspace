// Left Hand

// COMB(combo10,     KC_TAB,                   KC_W,           KC_E            )       // w+e = Tab
COMB(combo14,     LSFT(KC_F9),              KC_Q,              KC_W         )       // q+w = Shift+F9
// COMB(combo13,     KC_ESC,                   KC_W,              KC_E         )       // w+e = Esc
// COMB(combo11,     LCTL(KC_S),               KC_E,              KC_R         )       // e+r =  Ctrl+S
COMB(combo18,     LCTL(KC_X),               KC_X,           KC_C    )       // z+x = Ctrl+x
COMB(combo16,     LCTL(KC_C),               KC_C,           KC_D            )       // x+c = Ctrl+c
COMB(combo17,     LCTL(KC_V),               KC_D,           KC_V            )       // c+v = Ctrl+v

// COMB(combo99,     QK_BOOTLOADER,            Y_KEY, KC_U, KC_I, KC_O, KC_P)       // whole top row = puts the mcu in bootloader mode


// Right Hand

// COMB(combo00,     KC_BSPC,                  KC_I,           KC_O            )        // i+o = Backspace
COMB(combo01,     RCTL(KC_BSPC),            J_KEY,           KC_L            )           // u++i = Backspace Word
// COMB(combo02,     RSFT(KC_HOME),            Y_KEY,          KC_U            )            // y+u = Select line left
// COMB(combo03,     KC_ENT,                   KC_K,           KC_L            )       // k+l = Enter

// COMB(combo04,     KC_DEL,                   KC_COMM,        ALGR_T(KC_DOT)  )           // ,+. = Del
COMB(combo05,     RCTL(KC_DEL),             KC_U,              KC_Y         )           // m+, = delete next word
// COMB(combo06,     RSFT(KC_END),             KC_N,           KC_M            )            // n+m = Select line right

COMB(combo07,     KC_MINUS,                 RSFT_T(KC_N),      KC_H   )           // h+j = -  , can also get _ with a Shift
